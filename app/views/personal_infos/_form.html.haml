= form_for @personal_info do |f|
  - if @personal_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@personal_info.errors.count, "error")} prohibited this personal_info from being saved:"
      %ul
        - @personal_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :gender
    = f.number_field :gender
  .actions
    = f.submit 'Save'
