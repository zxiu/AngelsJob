= form_for @study_info do |f|
  - if @study_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@study_info.errors.count, "error")} prohibited this study_info from being saved:"
      %ul
        - @study_info.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :insititude
    = f.text_field :insititude
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :graduation
    = f.text_field :graduation
  .field
    = f.label :begin
    = f.date_select :begin, start_year: 1950, include_blank: true, discard_day: true
  .field
    = f.label :end
    = f.date_select :end, start_year: 1950, include_blank: true, discard_day: true
  .field
    = f.label :score
    = f.text_field :score

  .actions
    = f.submit 'Save'
